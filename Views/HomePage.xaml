<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MainPage.Views.HomePage"
             Title="HomePage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to UTS ChaBot"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Text="{Binding UserName}" Placeholder="Enter Your Question...." TextColor="Black" FontAttributes="Bold" VerticalOptions="End" HorizontalOptions="FillAndExpand" Margin="0,0,20,0"/>
    </VerticalStackLayout>
</ContentPage>